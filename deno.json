{
    "tasks": {
        "dev": "deno run -A --watch main.ts",
        "main": "deno run -A main.ts",
        "test": "deno test -A"
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 120,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": [
            "src/",
            "main.ts"
        ],
        "exclude": [
            "src/testdata/",
            "data/fixtures/**/*.ts"
        ]
    }
}